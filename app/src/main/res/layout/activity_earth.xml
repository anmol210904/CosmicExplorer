<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1EEB5"
    tools:context=".activities.EARTHActivity">


    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:fontFamily="@font/alatsi"
            android:textStyle="bold"
            android:background="@color/secondary"
            android:text="Earth Engine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alatsi"

            android:text="Longitude : "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edittextbg"
            android:ems="10"
            android:fontFamily="@font/alatsi"

            android:hint="e.g: 100.75"
            android:inputType="numberDecimal"
            android:paddingHorizontal="20dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/alatsi"
            android:text="Latitude: "
            android:textSize="20sp" />

        <EditText
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edittextbg"
            android:ems="10"
            android:fontFamily="@font/alatsi"
            android:hint="e.g: 1.5"
            android:inputType="numberDecimal"
            android:paddingHorizontal="20dp"
            android:textSize="20sp" />

        <com.msa.dateedittext.DateEditText
            android:id="@+id/dateEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextbg"
            android:fontFamily="@font/alatsi"
            android:gravity="center"
            android:hint="DD-MM-YYYY"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:textSize="20dp"
            app:dividerCharacter="minus" />

        <TextView
            android:id="@+id/fetch"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/datebg"
            android:fontFamily="@font/alatsi"
            android:gravity="center"
            android:text="Fetch"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_gravity="center"
            android:padding="2dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                tools:srcCompat="@drawable/imageplaceholder" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>